<!-- Include Head -->
<%- include('./partials/headerLogueado.ejs') %> 

	<body>
		<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src= <%= perfil.foto %> alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title">
							<a href="profile/edit">
								<i class="fas fa-cog"></i>
							</a>
							<%= perfil.nombre %>
						</h1>
					</div>
					<div>
						<h4><%= perfil.email %></h4>
						<ul class="">
							<li>11 productos</li>
							<li>252 comentarios</li>
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- /Datos del usuario -->

		<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for (let i = 0; i < data.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= i %>">
								<figure class="product-box_image">
									<img class="foto" src="<%= data[i].imagen %>" alt="<%= data[i].nombre %>">
								</figure>
								<article class="product-box_data">
									<h2><%= data[i].nombre %></h2>
									<p><%= data[i].descripcion %></p>
									<p>Comentarios: 5</p>
								</article>
							</a>
						</section>
					</div>	
				<% } %>
			</div>
		</div>
		<!-- /Mis productos -->

		<!-- footer -->
		<%- include('./partials/footer.ejs') %> 
		<!-- /footer -->
	</body>	
	
</html>