<%- include('./partials/header.ejs') %> 

	<body>
		<!-- Banner -->
		<div class="banner">
			<img src="/images/banner.png" alt="Banner de ofertas">
		</div>
		<!-- /Banner -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Novedades</h2>
				</div>

				<!-- Show the "ultimos" products -->
				<% for (let i = 0; i < 4; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= data[i].id %>">
								<figure class="product-box_image">
									<img class="foto" src="<%= data[i].imagen %>" alt="<%= data[i].nombre %>">
								</figure>
								<article class="product-box_data">
									<h2><%= data[i].nombre %></h2>
									<p>Vendedor: <%= data[i].usuario.nombre %></p>
									<p><%= data[i].descripcion %></p>
								</article>
							</a>
						</section>
					</div>	
				<% } %>
			</div>
		</div>
		<!-- /Novedades -->
		
		<!-- Más comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Más comentados</h2>
				</div>
				<!-- Show the "ultimos" products -->

				<% for (let i = 4; i < data.length ; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= data[i].id %>">
								<figure class="product-box_image">
									<img class="foto" src="<%= data[i].imagen %>" alt="<%= data[i].nombre %>">
								</figure>
								<article class="product-box_data">
									<h2><%= data[i].nombre %></h2>
									<p>Vendedor: <%= data[i].usuario.nombre %></p>
									<p><%= data[i].descripcion %></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			</div>
		</div>
		<!-- /Más comentados -->

		<!-- footer -->
		<%- include('./partials/footer.ejs') %> 
		<!-- /footer -->
	</body>	
</html>